/* against.wxss */
.baseInfo{
  display: flex;
  flex-direction: column;
  justify-content:center;
  align-items: center
}
.roundCount,.personCount{
  display: flex;
  margin:10px;
  justify-content:space-between;
  align-items: center;
}
.roundCount input{
  flex:1;
  border-bottom: 1px solid;
  text-align: center;
}
.warning{
  color:red;
  font-size: 10px;
}
.createTableBtn{
  width:80%;
  margin-top:20px;
}

.againstTable{
  display: grid;
  justify-content: center;
  grid-template-columns: 100%;
  grid-column-gap: 20px;
  margin:20px 10px;
}
.againstItem{
  display: grid;
  grid-template-columns: 2fr repeat(5,1fr) 2fr;
  justify-items: center;
  align-items: center;
  background-color: #eee;
}
.side .name{
  margin:10px 0;
}
.score{
  background:#44aa44; 
  height:60px;
  line-height: 60px;
  width:40px;
  font-size:25px;
  text-align: center;
}
.scoreL{
  border-bottom-left-radius: 50%;
  border-top-left-radius: 50%;
}
.scoreR{
  border-bottom-right-radius: 50%;
  border-top-right-radius: 50%;
}
.handleBtnGroup button{
  width:40px;
  height:30px;
  line-height: 30px;
  text-align: center;
  margin:5px;
}
.sub{
  font-size: 12px;
  text-align: center;
}