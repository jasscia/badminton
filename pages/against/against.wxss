.baseInfo{
  display: flex;
  flex-direction: column;
  justify-content:center;
  align-items: center
}
.roundCount,.personCount{
  display: flex;
  margin:10px;
  justify-content:space-between;
  align-items: center;
}
.roundCount input{
  /* width:20px; */
  flex:1;
  border-bottom: 1px solid;
  text-align: center;
}
.createTableBtn{
  width:80%;
  margin-top:20px;
}
.againstItem{
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: #eee;
  margin: 20px 10px;
}
.side{
  display: flex;
  flex-direction: column
}
.side .name{
  margin:10px auto;
}
.score{
  display: flex;
  align-items: center;
}
.scoreA,.scoreB{
  background:#44aa44; 
  height:40px;
  line-height: 40px;
  width:40px;
  text-align: center;
  border-radius: 50%;
  margin:5px;
  padding:5px;
}
.scoreBtnGroup{
  color:orange;
}
.scoreBtnGroup button{
  width:40px;
  height:30px;
  line-height: 30px;
  margin:5px 0;
  padding:0;
}
.sub{
  display: flex;
  font-size: 12px;
  text-align: center;
  width:50px;
  justify-content: center;
  flex-direction: column;
}