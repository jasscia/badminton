/**index.wxss**/

    .wrapper {
       width:100%;
       margin-bottom:60px;
    }
    .personList{
     padding:0;
     margin:0;
    }
    .item{
      display: flex; 
      margin:20px 0;
      justify-content: space-around;
    }
     .personName {
      text-align: center;
      line-height: 40px;
      height:40px;
      width:70%; 
      
      margin-left:20px;
      border: 1px solid #ddd;
      border-radius: 5px;  
    } 
    .del{
      text-align: center;
      line-height: 40px;
      width:60px;
    }
    .btn{
      display: flex;
      justify-content: space-around;
    }

     .btn>button {
      width:40%;
      padding:0 10px;
      margin:20px;
      background: #eee;
    } 
