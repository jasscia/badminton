
    .wrapper {
       width:100%;
       margin-bottom:60px;
    }
    .content{
      margin-top:20rpx;
      padding:0 20rpx;
    }
    textarea{
      width:100%;
      margin-left:-20rpx;
      border-bottom:1px solid #eee;
      border-bottom-right-radius: 50% 20%;
      border-bottom-left-radius: 50% 20%;
      background: rgba(240, 240, 240,0.6);
      padding:20rpx;
      letter-spacing: 2px;
      text-align:left;
      height:150rpx;
      line-height: 50rpx;
      font-weight: lighter;
    }
    .textarea::before{
      content:'请输入参与人员姓名，用 + 或 空格 分隔';
      color:#ccc;
      display: block;
      position: relative;
      top:-20px;
      font-weight: lighter;
      font-size:25rpx;
      text-align: center;
    }
    .sortTable{
      margin-top:50rpx;
    }
    .title{
      text-align: center;
      height:20rpx;
      width:500rpx;
      line-height: 20rpx;
      vertical-align: middle;
      font-size: 50rpx;
      letter-spacing: 10rpx;
      margin:40rpx auto;
      background: linear-gradient(to right,yellow,greenyellow,yellow);
      border-radius: 50%;
    }
    .ul{
      font-size: 40rpx;
    } 
    .li{
      display: flex;
      background:rgba(240, 240, 240,0.8);
      margin:30rpx 0;
      height:100rpx;
      line-height: 100rpx;
      vertical-align: middle;
      border-radius: 20rpx;
      position: relative;
      padding:0 20rpx;
    }
    .order::before{
      content: 'NO.';
      font-size: 60%;
      font-style: italic;
    }
    .name{
      flex:1;
      white-space:nowrap;
      overflow: hidden;
    }
    .name,.order{
      text-align: center
    }
    
    .icon{
      width: 80rpx;
      margin:10rpx 25rpx;
      text-align: center;
      color:#ccc;
      border-radius: 50%;
      font-weight: 900;
    }
    .up,.down{
      background: #fff;     
    }
    .null{
      background:rgba(240, 240, 240,0.8);
    }
    .up::after{
      content: '↑';
      font-size: 150%;
      display: inline-block;
      transform: translateY(-5rpx);
    }
    .down::after{
      content: '↓';
      font-size: 150%;
      display: inline-block;
      transform: translateY(-5rpx);
    }
